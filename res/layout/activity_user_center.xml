<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topbackground"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.micode.notes.view.widget.CircleImageView
                android:id="@+id/iv_user_head_portrait"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_app" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/app_name"
                android:textColor="@color/topbackground"
                android:textSize="@dimen/large_text_size" />

            <TextView
                android:id="@+id/tv_version_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray" />
        </LinearLayout>

        <ScrollView
              android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/btn_introduce_aboutus"
                    style="@style/PersonalTopStyle" >

                    <TextView
                        style="@style/PersonalTextStylebtn"
                        android:text="了解更多" />

                    <ImageView
                        style="@style/PersonalRightIconStyle"
                        android:scaleType="fitCenter"
                        android:src="@drawable/android_list_idex" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mainbtnverticaldevider" />

                <LinearLayout
                    android:id="@+id/btn_checkupdate_aboutus"
                    style="@style/PersonalTopStyle" >

                    <TextView
                        style="@style/PersonalTextStylebtn"
                        android:text="VIP" />

                    <TextView
                        android:id="@+id/tv_vip"
                        style="@style/PersonalRightIconStyle"
                        android:text="不是" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mainbtnverticaldevider" />

                <LinearLayout style="@style/PersonalTopStyle" >

                    <TextView
                        style="@style/PersonalTextStylebtn"
                        android:text="性别" />

                    <TextView
                        android:id="@+id/tv_gender"
                        style="@style/PersonalRightIconStyle"
                        android:text="nv" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mainbtnverticaldevider" />

                <LinearLayout style="@style/PersonalTopStyle" >

                    <TextView
                        style="@style/PersonalTextStylebtn"
                        android:text="现住地" />

                    <TextView
                        android:id="@+id/tv_city"
                        style="@style/PersonalRightIconStyle"
                        android:text="哈尔滨" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mainbtnverticaldevider" />

                <LinearLayout style="@style/PersonalTopStyle" >

                    <TextView
                        style="@style/PersonalTextStylebtn"
                        android:text="祖籍" />

                    <TextView
                        android:id="@+id/tv_province"
                        style="@style/PersonalRightIconStyle"
                        android:text="黑龙江" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mainbtnverticaldevider" />

                <LinearLayout style="@style/PersonalTopStyle" >

                    <TextView
                        style="@style/PersonalTextStylebtn"
                        android:text="Token" />

                    <TextView
                        android:id="@+id/tv_token"
                        style="@style/PersonalRightIconStyle"
                        android:text="Token" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mainbtnverticaldevider" />

                <LinearLayout style="@style/PersonalTopStyle" >

                    <TextView
                        style="@style/PersonalTextStylebtn"
                        android:text="UserId" />

                    <TextView
                        android:id="@+id/tv_user_id"
                        style="@style/PersonalRightIconStyle"
                        android:text="UserId" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/mainbtnverticaldevider" />

                <LinearLayout style="@style/PersonalTopStyle" >

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="新闻标题，模糊匹配" />

                    <Button
                        android:id="@+id/news_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更改新闻内容" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>