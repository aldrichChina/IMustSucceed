<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calendar_mask2" >

    <ImageView
        android:id="@+id/TechnologyNewsAdapter_pic"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_app" />

    <TextView
        android:id="@+id/TechnologyNewsAdapter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/TechnologyNewsAdapter_pic"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="新闻标题"
        android:textColor="#FF0000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TechnologyNewsAdapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/TechnologyNewsAdapter_title"
        android:layout_marginRight="15dp"
        android:text="时间"
        android:textColor="#9F4D95" />

    <TextView
        android:id="@+id/TechnologyNewsAdapter_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TechnologyNewsAdapter_time"
        android:layout_toRightOf="@id/TechnologyNewsAdapter_pic"
        android:text="新闻内容" />

</RelativeLayout>